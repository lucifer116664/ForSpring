<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <!--Imports musicPlayer.properties-->
    <context:property-placeholder location="musicPlayer.properties"/>

    <bean id="classicalMusicBean"
          class="yurko.ClassicalMusic"
          init-method="init"
          destroy-method="destroy">
    </bean>

    <bean id="rockMusicBean"
          class="yurko.RockMusic"
          init-method="init"
          destroy-method="destroy">
    </bean>

    <!--injects dependency(musicBean)-->
    <bean id="musicPlayer"
          class="yurko.MusicPlayer"
          scope="prototype"
          init-method="init"
          destroy-method="destroy">
        <!--injects dependency(musicBean) into constructor-->
        <!--<constructor-arg ref="musicBean"/>-->

        <!--injects dependency(musicBean) into setter-->
        <!--<property name="music" ref="musicBean"/>-->

        <!--Injects list-->
        <property name="musicList">
            <list>
                <ref bean="classicalMusicBean"/>
                <ref bean="rockMusicBean"/>
            </list>
        </property>

        <!--Injects values from propertie file-->
        <property name="model" value="${musicPlayer.model}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>

</beans>